{
  "name": "qflow",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build:agent": "esbuild src/qaAgent.ts --bundle --platform=node --format=esm --packages=external --outfile=dist/qaAgent.mjs",
    "build:server": "esbuild src/server.ts --bundle --platform=node --format=esm --packages=external --outfile=dist/server.mjs",
    "build": "npm run build:agent && npm run build:server",
    "start": "npm run build:agent && node --env-file=.env dist/qaAgent.mjs",
    "serve": "npm run build && node --env-file=.env dist/server.mjs",
    "test": "npm run start",
    "lint": "echo \"No lint configured\""
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "express": "^5.2.1",
    "playwright": "^1.45.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "esbuild": "^0.21.0",
    "typescript": "^5.4.2"
  }
}
